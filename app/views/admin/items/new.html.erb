<div class="conteiner">
  <h3 class="col-md-3 offset-3">
    商品新規登録
  </h3>
  <%= form_with model: Item.new do |f| %>
  <div class="container">
    <div class="col-md-6 offset-4">
      <table>
        <tbody>
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
            <td></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name %></td>
            <td></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction %></td>
            <td></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.text_field :price %></td>
            <td></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit '新規登録' %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% end %>
</div>