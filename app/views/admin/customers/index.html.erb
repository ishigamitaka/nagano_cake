<div class="conteiner">
  <h3 class="col-md-3 offset-3">
    会員一覧
  </h3>
  <div class="col-md-6 offset-4">
    <table>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id%></td>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %>
              <%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_deleted %>
              退会済み
            <% else %>
              有効
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>