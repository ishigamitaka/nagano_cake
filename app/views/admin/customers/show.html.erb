<div class="conteiner">
  <div class="row">
    <h3 class="col-md-3 offset-3">
      <%= @customer.last_name %><%= @customer.first_name%>
      さんの会員詳細
    </h3>
  </div>
  <div class="col-md-10 offset-4">
    <table>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %></td>
          <td><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %></td>
          <td><%= @customer.first_namr_kana%></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <td>
            <% if @customer.is_deleted %>
              退会済み
            <% else %>
              有効
            <% end %>
        </td>
        <tr>
          <td><%= link_to "編集する", edit_admin_customer_path %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>