<div class="conteiner">
  <h3 class="col-md-3 offset-3">
    <%= @customer.last_name %><%= @customer.first_name%>
    さんの会員情報編集
  </h3>
  
  <div class="col-md-10 offset-3">
    <%= form_with model: @customer, url:admin_customer_path, method: :patch do |f| %>
    <table>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_namr_kana%></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :id %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存" %></td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>
</div>