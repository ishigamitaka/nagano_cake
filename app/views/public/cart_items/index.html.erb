<div class="conteiner">
  <div class="row">
    <h3 class="col-md-3 offset-3">
      ショッピングカート
    </h3>
    <div class="col-md-3 offset-9">
      <%= button_to cart_items_destory_all_path, method: :delete do %>
      カートを空にする
      <% end %>
    </div>
  </div>
  
  <div class="col-md-9 offset-4">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td>¥<%= cart_item.item.with_tax_price%></td>
          <td>
            <%= form_with model: cart_item do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更" %>
            <% end %>
          </td>
          <td>¥<%= cart_item.subtotal %></td>
          <td>
            <%= button_to cart_item_path(cart_item.id), method: :delete do %>
              削除する
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <%= button_to items_path do %>
              買い物を続ける
            <% end %>
          </td>
          <td><% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto">
      <%= button_to new_order_path do %>
        情報入力に進む
      <% end %>
    </div>
  </div>
</div>
