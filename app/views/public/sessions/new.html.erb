<div class="conteiner">
  <div class="row">
    <h3 class="col-md-3 offset-1">ログイン</h3>
  </div>
  <div class="row">
    <h4 class="col-md-5 offset-1">会員の方はこちらからログイン</h4>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="col-md-10 offset-1">
      <table>
        <tbody>
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
  <h4 class="col-md-6 offset-1">
        会員登録がお済みでない方
  </h4>
  <div class="row">
    <div class="col-md-3 offset-3">
      <%= link_to new_customer_registration_path do %>
        こちら
      <% end %>
        から新規登録を行ってください。
    </div>
  </div>