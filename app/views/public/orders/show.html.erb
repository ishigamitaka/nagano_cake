<div class="container">
    <div class="col-md-6 offset-1">
        注文情報
        <table>
          <tr>
            <thead>
              <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
            </thead>
            <tbody>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= @order.address %></td>
              <td><%= @order.method_of_payment_i18n %></td>
            </tbody>
          </tr>
        </table>
    </div>
    <div class="col-md-3 offset-8">
      請求情報
      <table>
          <thead>
            <th>商品合計</th>
            <th>配送料</th>
            <th>ご請求額</th>
          </thead>
          <tbody>
            <td><%= @order.total_payment %></td>
            <td><%= @order.postage %></td>
            <td><%= @order.total_payment - @order.postage %></td>
          </tbody>
        </tr>
      </table>
    </div>
    <div class="col-md-6 offset-1">
      注文内容
      <table>
        <tr>
        <therd>
          <tr>
            <th>商品</th>
            <th>単価（税込み）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </therd>
        <% @order.order_items.each do |order_item| %>
        <tbody>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.item.with_tax_price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.item.with_tax_price * order_item.amount %></td>
        </tbody>
        <% end %>
      </table>
    </div>
</div>