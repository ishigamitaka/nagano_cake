<div class="container">
    <div class="col-md-6 offset-1">
        注文情報
        <table>
            <thead>
              <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
            </thead>
            <tbody>
              <td><%= @order.created_at %></td>
              <td><%= @order.address %></td>
              <td><%= @order.method_of_payment_i18n %></td>
            </tbody>
        </table>
    </div>
    <div class="col-md-3 offset-6">
      <table>
        <thead>
          <th>商品合計</th>
          <th>配送料</th>
          <th>ご請求額</th>
        </thead>
        <tbody>
          <td><%= @total.round.to_s(:delimited)%></td>
          <td><%= @order.postage %></td>
          <td><%= (@total+@order.postage).round.to_s(:delimited) %></td>
        </tbody>
      </table>
    </div>
    <div class="col-md-6 offset-1">
      <table>
        <therd>
          <tr>
            <th>商品</th>
            <th>単価（税込み）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </therd>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
        </tbody>
        <% end %>
      </table>
    </div>
</div>