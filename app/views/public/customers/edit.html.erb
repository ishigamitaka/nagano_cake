<div class="conteiner">
  <div class="row">
    <h3 class="col-md-3 offset-3"></h3>
  </div>
  <div class="container">
    <div class="col-md-10 offset-1">
      <%= form_with model: @customer, url:customers_information_path do |f| %>
      <table>
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>:カナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_namr_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div class="col-md-4 offset-1">
          <%= f.submit 'Update User' %>
          <%= link_to "退会する", customers_confirmation_path %>
        </div>
      </div>
      <% end %>
    </div>
  </div>